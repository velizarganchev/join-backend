# Superuser (initial admin credentials)
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=supersecret
DJANGO_SUPERUSER_USERNAME=admin

# Core settings
DEBUG=0
SECRET_KEY=your-very-long-random-secret-key-here
ALLOWED_HOSTS=join.velizar-ganchev-backend.com,127.0.0.1,localhost,https://join.velizar-ganchev.com
CSRF_TRUSTED_ORIGINS=https://join.velizar-ganchev-backend.com,https://join.velizar-ganchev.com

# Database (AWS RDS)
USE_SQLITE=0
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_HOST=myjoindb.cdamwymas26x.eu-central-1.rds.amazonaws.com
DB_PORT=5432
DB_SSLMODE=require

# CORS (Frontend domains)
CORS_ALLOWED_ORIGINS=https://join.velizar-ganchev.com

# HSTS (set to >0 only when HTTPS is fully configured)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0
